        | Buttons

      button(class='btn') Button
      | &nbsp;
      a(href='#' class='btn') Link
      | &nbsp;
      button(class='btn btn-primary') Button
      | &nbsp;
      a(href='#' class='btn btn-primary') Link

      h3(class='border-b border-t0 pb-2 mt-6')
        a(id='select' href='#select' class='flex mie-1 no-underline')
          svg(class='icon' role='img')
            title Anchor Link
            use(xlink:href='#tabler-hash')

        | Select

      div(class='question')
        label(class='label' for='select-an-option') Question label

        div
          div(class="select")
            select(id='select-an-option')
              option Select an Option
              option(disabled) ---
              option Option

            svg(aria-hidden="true" class="select__graphic")
              use(xlink:href="#select-graphic")

      h3(class='border-b border-t0 pb-2 mt-6')
        a(id='options' href='#options' class='flex mie-1 no-underline')
          svg(class='icon' role='img')
            title Anchor Link
            use(xlink:href='#tabler-hash')

        | Options

      div(class='question')
        label(class='label') Question label

        div
          fieldset
            legend Radio

            label(class='opt' for='opt-a')
              input(id='opt-a' name='opt["radio"]' type='radio' value='opt-a' class='sr-only')

              span(class='opt__base')
                svg(aria-hidden='true' class='opt__graphic')
                  use(xlink:href='#radio-graphic')

                span(class='opt__label') Radio Option A
            | &nbsp;
            label(class='opt' for='opt-b')
              input(id='opt-b' name='opt["radio"]' type='radio' value='opt-b' class='sr-only')

              span(class='opt__base')
                svg(aria-hidden='true' class='opt__graphic')
                  use(xlink:href='#radio-graphic')

                span(class='opt__label') Radio Option B

      div(class='question')
        label(class='label') Question label

        div
          fieldset
            legend Checkbox

            label(class='opt' for='opt-check')
              input(id='opt-check' name='opt["checkbox"]' type='checkbox' value='opt-check' class='sr-only')
              span(class='opt__base')
                svg(aria-hidden='true' class='opt__graphic')
                  use(xlink:href='#checkbox-graphic')

                span(class="opt__label") Option Check

