section(id='forms')
  header(class='px-3')
    div(class='max-w-desktop mx-auto')
      h2(class='py-4 m-0')
        a(href='#forms' class='flex mie-1 no-underline')
          svg(class='icon w-4 h-4' role='img')
            title Anchor Link
            use(xlink:href='#tabler-hash')

        | Forms

  div(class='py-8 px-3 bg-t1')
    div(class='max-w-desktop mx-auto')

      h3(class='border-b border-t0 pb-2 mt-6')
        a(id='questions' href='#questions' class='flex mie-1 no-underline')
          svg(class='icon' role='img')
            title Anchor Link
            use(xlink:href='#tabler-hash')

        | Questions

      div(class='question')
        label(class='label' for="answer") Question label

        div
          div(class='input')
            input(type='text' id="answer" placeholder='Answer')

      h3(class='border-b border-t0 pb-2 mt-6')
        a(id='buttons' href='#buttons' class='flex mie-1 no-underline')
          svg(class='icon' role='img')
            title Anchor Link
